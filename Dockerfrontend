# CMD ["sh", "-c", "./venv/bin/python /usr/src/frontend/server.py &  npm start "]
# CMD ["sh", "-c", "cd /usr/src/backend && /usr/src/venv/bin/python server.py & cd - && npm start"]
# CMD ["sh", "-c", "./venv/bin/python /usr/src/backend/server.py &  npm start --prefix /usr/src/frontend"]
# CMD sh -c "cd /usr/src/backend && /usr/src/venv/bin/python server.py & cd /usr/src/frontend && npm start"
# CMD ["sh", "-c", "cd /usr/src/backend && /usr/src/venv/bin/python server.py & sleep 3; cd /usr/src && npm start"]

